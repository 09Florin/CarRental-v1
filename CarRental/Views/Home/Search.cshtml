@model List<Car>
<link rel="stylesheet" href="../css/Search.css" />

<h1>Search Results</h1>

@if (Model.Count == 0)
{
    <p>No cars found.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Manufacturer</th>
                <th>Model</th>
                <th>Year</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <td>@car.Manufacturer</td>
                    <td>@car.Model</td>
                    <td>@car.Year</td>
                    <td><a href="@Url.Action("Details", "Cars", new { id = car.Id })">View details</a></td>
                </tr>
            }
        </tbody>
    </table>
}
